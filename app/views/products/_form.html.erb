<div class="container mt-5 mb-5 d-flex justify-content-center" >
 <div class="card px-1 py-4" style="margin-top:70px;">
<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="card-body" style="width:800px;text-align: left;">
  
  <div class="field">
    <%= form.label :name ,class:'fw-bold'%>
    <%= form.text_field :name ,class: 'form-control'%><br>
  </div>

  <div class="field">
    <%= form.label :description ,class:'fw-bold'%>
    <%= form.text_area :description,class: 'form-control' %><br>
  </div>
  <div>
    <%=form.label :category_id ,class:'fw-bold'%>
    <%= form.collection_select :category_id , Category.order(:category_name), :id, :category_name %> <br>
   </div> 

   <div class="field"><br>
   <%= form.label :image,class:'fw-bold' %>
   <%= form.file_field :image , multiple: true %><br>
  </div>
 

  <div class="field">
    <br>
    <%= form.label :price ,class:'fw-bold'%>
    <%= form.text_field :price,class: 'form-control' %><br>
  </div>

  <div class="field">
    <%= form.label :quantity ,class:'fw-bold'%>
    <%= form.number_field :quantity ,class: 'form-control' ,style: 'width:100px;height:30px;'%><br>
  </div>

  <div class="field">
    <%= form.label :is_active ,class:'fw-bold'%>
    <%= form.check_box :is_active %>
  </div>

  <div class="actions">
   <center> <%= form.submit "Add Product" ,class: 'btn btn-success'%></center>
  </div>
<% end %>
<%= link_to 'Back', url_for(:back) %>
</div>
</div>
</div>