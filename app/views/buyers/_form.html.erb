<div class="container mt-5 mb-5 d-flex justify-content-center">
 <div class="card px-1 py-4">
  <div class="card-body" style="width:500px;">
    <%= form_with(model: buyer) do |form| %>
    <% if buyer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(buyer.errors.count, "error") %> prohibited this buyer from being saved:</h2>

      <ul>
        <% buyer.errors.each do |error| %>
        <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="field" >
      <%= form.text_field :buyer_name , class: "form-control" , placeholder: "Name" %>
    </div>

    <div class="field">
      <%= form.text_field :email , class: "form-control" , placeholder: "E-mail" %>
    </div>

    <div class="field">
      <%= form.text_field :phone_number , class: "form-control" , placeholder: "Phone number" %>
    </div>

    <div class="field">
      <%= form.password_field :password , class: "form-control" , placeholder: "Password" %>
    </div>

    <div class="field">
      <%= form.label :is_active , class: "fw-bold" %>
      <%= form.check_box :is_active %>
    </div>

    <div class="actions">
      <%= form.submit class: "btn btn-outline-primary" %>
    </div>
    <% end %>
  </div>
</div>
</div>
