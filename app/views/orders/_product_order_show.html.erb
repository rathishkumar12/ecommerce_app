<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= product.name %>
</p>
<% (0...product.image.count).each do |image| %>
<%= image_tag(product.image[image],style: 'height:300px;width:300px;') %>
<% end %>
<p>
  <strong>Description:</strong>
  <%= product.description %>
</p>
<p>
  <strong>Seller:</strong>
  <%= product.seller.seller_company_name %>
</p>
<p>
  <strong>Price:</strong>
  <%= product.price %>
</p>

<p>
  <strong>Available Quantity :</strong>
  <%= product.quantity %><hr>
</p>

