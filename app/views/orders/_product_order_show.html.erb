<p id="notice"><%= notice %></p>
<div style="color:lightgray;">
<h6>
  <strong>Name:</strong>
  <%= product.name %>
</h6>
<%if %>
<%= image_tag(product.image[0],style: 'height:300px;width:300px;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
') %>
<%else%>
<%= image_tag('icon/noImage.jpeg',style: 'height:300px;width:300px;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
') %>
<%end%>
<h6><br>
  <strong>Description:</strong>
  <%= product.description %>
</h6><br>
<h6>
  <strong>Seller:</strong>
  <%= product.seller.seller_company_name %>
</h6><br>
<h6>
  <strong>Price:</strong>
  <%= product.price %>
</h6><br>

<h6>
  <strong>Available Quantity :</strong>
  <%= product.quantity %>
</h6><br>
</div>

