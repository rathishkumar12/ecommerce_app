<p id="notice"><%= notice %></p>

<div class="text-center bg-dark text-white fixed-top" style="height:70px;"><h3 class="fw-bold" style="margin-top:10px">Orders</h3></div>

<br>
<center style="margin-top: 50px;">
<% @orders.each do |order| %>
  <div class="card mb-3" style="max-width: 700px;">
  <div class="row g-0">
    <div class="col-md-4">
      <% if order.order_item[0].product.image.count>0 %>
      <%= image_tag(order.order_item[0].product.image[0] ,class: "card-img-top")  %>
      <%else%>
      <%= image_tag('icon/noImage.jpg' , class:"card-img-top")  %>
      <%end%>
    </div>
    <div class="col-md-8">
      <div class="card-body" style="text-align:left; ">
      <br>
      <h6 class="fw-bold"><%= order.order_item[0].product.name %></h6>
     <h6 class="fw-bold">Product Id :<%= order.order_item[0].product_id %></h6>
     <h6 class="fw-bold">Quantity :<%= order.order_item[0].quantity %></h6>
    <% if buyer_signed_in?%>
    <h6 ><b>Sold by : </b><%= order.seller.seller_company_name%></h6>
    <%else%>
    <h6 ><b>Bought by : </b><%= order.buyer.buyer_name%></h6>
    <%end%>
    <h6 ><b>Status : </b><%= order.status%></h6>
    <h5 style="color: #9c0902;"><sup><span>&#8377</span></sup><%= order.amount %></h5>
      <ol class="breadcrumb">
      <li class="breadcrumb-item"> <%= link_to 'Show', order %></li>
     <li class="breadcrumb-item">  <%= link_to 'Edit', edit_order_path(order) %></li>
      <li class="breadcrumb-item"> <%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></li>
    </ol>
      </div>
    </div>
  </div>
</div>
<% end %>
</center>
<br><br>
<%= link_to 'Back', url_for(:back) ,class:'btn btn-success text-white'  %>
