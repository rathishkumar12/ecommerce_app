<div class="container mt-5 mb-5 d-flex justify-content-center" >
  <div class="card px-1 py-4">
    <div class="card-body" style="width:500px;" >
      <%= form_with(model: seller) do |form| %>
      <% if seller.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(seller.errors.count, "error") %> prohibited this seller from being saved:</h2>

        <ul>
          <% seller.errors.each do |error| %>
          <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <div class="field">
        <%= form.text_field :seller_name , class: "form-control" , placeholder: "Name" %>
      </div>

      <div class="field">
        <%= form.text_field :seller_company_name , class: "form-control" , placeholder: "Company Name" %>
      </div>

      <div class="field">
        <%= form.text_field :email , class: "form-control" , placeholder: "Email" %>
      </div>

      <div class="field">
        <%= form.text_field :phone_number , class: "form-control" , placeholder: "Phone Number" %>
      </div>

      <div class="field">
        <%= form.password_field :password , class: "form-control" , placeholder: "Password" %>
      </div>

      <div class="field">
        <%= form.label :is_active , class: "fw-bold" %>
        <%= form.check_box :is_active %>
      </div>

      <div class="actions">
        <%= form.submit "Sign Up" ,class: "btn btn-outline-primary" %>  
      </div>
      <% end %>
    </div>
  </div>
</div>
