<h2>Seller Registeration</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "sellers/shared/error_messages", resource: resource %>



  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div> 

  <div class="field">
    <%= f.label :seller_name %><br />
    <%= f.text_field :seller_name, autofocus: true, autocomplete: "seller_name" %>
  </div>

  <div class="field">
    <%= f.label :seller_company_name %><br />
    <%= f.text_field :seller_company_name, autofocus: true, autocomplete: "seller_company_name" %>
  </div> 
  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.number_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div> 
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "sellers/shared/links" %>
